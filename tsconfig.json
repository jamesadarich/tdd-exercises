{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        ".**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./exercises/**/*.ts",
        "./typings/index.d.ts"
    ],
    "files": [
        "./exercises/fizz-buzz/fizz-buzz.d.ts",
        "./exercises/fizz-buzz/fizz-buzz.ts",
        "./exercises/fizz-buzz/test.spec.d.ts",
        "./exercises/sample-test.spec.d.ts",
        "./exercises/string-calculator/string-calculator.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
